<div class="section">
    <h1 class="title has-text-centered">Welcome to Rails Girls</h1>
    <div class="has-text-centered center-flex">
        <%= link_to "Create Article", new_article_path, class:"has-text-danger create-btn" %>
    </div>
</div>
<div class="columns is-centered is-multiline is-variable is-8">
    <% @articles.each do |article| %>
    <div class="column is-one-third-desktop">
        <div class="card">
            <div class="card-image">
                <figure class="image is-4by3">
                    <%= image_tag "article-logo.png", size:"350" %>
                </figure>
            </div>
            <div class="card-content">
                <div class="content">
                    <h1><%= article.title.titleize %></h1>
                    <i><span class="is-size-7 has-text-danger pt-3 mt-3">Created by <%= article.user.email %></span></i>
                    <p class="is-size-7 has-text-grey pt-3 text-right"><time
                            datetime="2016-1-1"><%=  article.created_at.strftime("%m/%d/%Y") %></time></p>
                    <p><%= article.description %></p>
                    <br>
                </div>
            </div>
            <div class="card-footer has-background-light">
                <%= link_to "View Article", article, class: "card-footer-item has-text-danger has-text-weight-bold" %>
            </div>
        </div>
    </div>
    <% end %>
</div>